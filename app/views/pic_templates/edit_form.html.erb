<h1>Edit Photo <%= params["an_id"] %></h1>

<form action="/update_photo/<%= params["an_id"] %>">
  <div>
    <label for="source_input">
      Image URL
    </label>

    <input id="source_input" type="text" name="the_source" value="<%= @pic.source %>">
  </div>

  <div>
    <label for="caption_input">
      Caption
    </label>

    <input id="caption_input" type="text" name="the_caption" value="<%= @pic.caption %>">
  </div>

  <button>
    Update Photo
  </button>
</form>